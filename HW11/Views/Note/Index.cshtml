@model IEnumerable<Note>
@{
    ViewData["Title"] = "Note";
}

<div>
    <h1>Notes</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Tags</th>
                <th>Created At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
            {
                <tr>
                    <td width="15%">@note.Title</td>
                    <td width="50%">@note.Tags</td>
                    <td width ="15%">@note.Tags</td>
                    <td width ="15%">@note.CreatedAt</td>
                    <td>
                        <div>
                            <span>
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col mb-3">
        <a asp-controller="Note" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add</a>
    </div>
</div>